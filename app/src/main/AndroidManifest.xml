<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bardxhong.activitytaskmaze">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".BaseActivity" />

        <activity android:name=".MainActivity"
            android:launchMode="standard"
            android:taskAffinity=".main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BaseActivity$Standard"
            android:launchMode="standard" />

        <activity android:name=".BaseActivity$Standard_Affinity"
            android:launchMode="standard"
            android:taskAffinity=".affinity"/>

        <activity android:name=".BaseActivity$SingleInstance"
            android:launchMode="singleInstance" />

        <activity android:name=".BaseActivity$SingleIntance_Affinity"
            android:launchMode="singleInstance"
            android:taskAffinity=".affinity"/>

        <activity android:name=".BaseActivity$SingleTop"
            android:launchMode="singleTop" />

        <activity android:name=".BaseActivity$SingleTop_Affinity"
            android:launchMode="singleTop"
            android:taskAffinity=".affinity"/>

        <activity android:name=".BaseActivity$SingleTask"
            android:launchMode="singleTask" />

        <activity android:name=".BaseActivity$SingleTask_Affinity"
            android:launchMode="singleTask"
            android:taskAffinity=".affinity"/>
    </application>

</manifest>